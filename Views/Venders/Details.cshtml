@model Vender

@{
    ViewData["Title"] = "Vendor Details";
}

<div class="page-header">
    <h2><i class="bi bi-building"></i> Vendor Details</h2>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="bi bi-info-circle"></i> @Model.VenderName
                </h5>
            </div>
            <div class="card-body p-4">
                <div class="row">
                    <!-- Basic Information -->
                    <div class="col-md-6 mb-4">
                        <h6 class="text-muted mb-3">
                            <i class="bi bi-info-circle"></i> Basic Information
                        </h6>
                        <dl class="row">
                            <dt class="col-sm-5">Vendor Code:</dt>
                            <dd class="col-sm-7">
                                <span class="badge bg-primary">@Model.VenderCode</span>
                            </dd>

                            <dt class="col-sm-5">Vendor Name:</dt>
                            <dd class="col-sm-7"><strong>@Model.VenderName</strong></dd>

                            <dt class="col-sm-5">Business Type:</dt>
                            <dd class="col-sm-7">@(Model.BusinessType ?? "N/A")</dd>

                            <dt class="col-sm-5">Email:</dt>
                            <dd class="col-sm-7">
                                @if (!string.IsNullOrEmpty(Model.Email))
                                {
                                    <a href="mailto:@Model.Email">@Model.Email</a>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </dd>

                            <dt class="col-sm-5">Account No:</dt>
                            <dd class="col-sm-7"><strong>@(Model.AccountNo ?? "N/A")</strong></dd>

                            <dt class="col-sm-5">Payment Terms:</dt>
                            <dd class="col-sm-7">@Model.PaymentTerms Days</dd>

                            <dt class="col-sm-5">Cost Center:</dt>
                            <dd class="col-sm-7">
                                @if (Model.CostCenter != null)
                                {
                                    <span class="badge bg-secondary">@Model.CostCenter.CostCenterName</span>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </dd>

                            <dt class="col-sm-5">Status:</dt>
                            <dd class="col-sm-7">
                                @if (Model.Active)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle"></i> Active
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">
                                        <i class="bi bi-x-circle"></i> Inactive
                                    </span>
                                }
                            </dd>
                        </dl>
                    </div>

                    <!-- Contact Information -->
                    <div class="col-md-6 mb-4">
                        <h6 class="text-muted mb-3">
                            <i class="bi bi-person"></i> Contact Information
                        </h6>
                        <dl class="row">
                            <dt class="col-sm-5">Contact Person:</dt>
                            <dd class="col-sm-7">@(Model.ContactPerson ?? "N/A")</dd>

                            <dt class="col-sm-5">Phone Number:</dt>
                            <dd class="col-sm-7">
                                @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                                {
                                    <a href="tel:@Model.PhoneNumber">@Model.PhoneNumber</a>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </dd>

                            <dt class="col-sm-5">Job Title:</dt>
                            <dd class="col-sm-7">
                                @if (Model.JobTitle != null)
                                {
                                    <span class="badge bg-secondary">@Model.JobTitle.JobName</span>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </dd>
                        </dl>
                    </div>

                    <!-- Location -->
                    <div class="col-md-6 mb-4">
                        <h6 class="text-muted mb-3">
                            <i class="bi bi-geo-alt"></i> Location
                        </h6>
                        <dl class="row">
                            <dt class="col-sm-5">City:</dt>
                            <dd class="col-sm-7">
                                @if (Model.City != null)
                                {
                                    <span>@Model.City.Name, @Model.City.Country?.Name</span>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </dd>

                            <dt class="col-sm-5">Address:</dt>
                            <dd class="col-sm-7">@(Model.Address ?? "N/A")</dd>
                        </dl>
                    </div>

                    <!-- Banking Information -->
                    <div class="col-md-6 mb-4">
                        <h6 class="text-muted mb-3">
                            <i class="bi bi-bank"></i> Banking Information
                        </h6>
                        <dl class="row">
                            <dt class="col-sm-5">Bank:</dt>
                            <dd class="col-sm-7">
                                @if (Model.Bank != null)
                                {
                                    <span class="badge bg-info">@Model.Bank.BankName</span>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </dd>

                            <dt class="col-sm-5">Account Number:</dt>
                            <dd class="col-sm-7">
                                @if (!string.IsNullOrEmpty(Model.BankAccountNumber))
                                {
                                    <code>@Model.BankAccountNumber</code>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </dd>

                            <dt class="col-sm-5">IBAN:</dt>
                            <dd class="col-sm-7">
                                @if (!string.IsNullOrEmpty(Model.BankAccountIBan))
                                {
                                    <code>@Model.BankAccountIBan</code>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </dd>
                        </dl>
                    </div>

                    <!-- Additional Information -->
                    <div class="col-md-12 mb-4">
                        <h6 class="text-muted mb-3">
                            <i class="bi bi-file-text"></i> Additional Information
                        </h6>
                        <dl class="row">
                            <dt class="col-sm-2">Description:</dt>
                            <dd class="col-sm-10">@(Model.Description ?? "N/A")</dd>

                            <dt class="col-sm-2">Additional Info:</dt>
                            <dd class="col-sm-10">@(Model.AdditionalInfo ?? "N/A")</dd>
                        </dl>
                    </div>

                    <!-- Timestamps -->
                    <div class="col-md-12">
                        <h6 class="text-muted mb-3">
                            <i class="bi bi-clock-history"></i> Timestamps
                        </h6>
                        <dl class="row">
                            <dt class="col-sm-2">Created:</dt>
                            <dd class="col-sm-4">
                                <i class="bi bi-calendar-plus"></i>
                                @Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")
                            </dd>

                            <dt class="col-sm-2">Modified:</dt>
                            <dd class="col-sm-4">
                                <i class="bi bi-calendar-check"></i>
                                @Model.ModifiedDate.ToString("dd/MM/yyyy HH:mm")
                            </dd>
                        </dl>
                    </div>
                </div>

                <div class="mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a href="/Venders" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
