@model Vender

@{
    ViewData["Title"] = "Delete Vendor";
}

<div class="page-header">
    <h2 class="text-danger"><i class="bi bi-exclamation-triangle"></i> Delete Vendor</h2>
</div>

<div class="row">
    <div class="col-md-10 mx-auto">
        <div class="card border-danger">
            <div class="card-body p-4">
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    <strong>Warning!</strong> Are you sure you want to delete this vendor?
                </div>

                <dl class="row">
                    <dt class="col-sm-3">Vendor Code:</dt>
                    <dd class="col-sm-9"><span class="badge bg-primary">@Model.VenderCode</span></dd>

                    <dt class="col-sm-3">Vendor Name:</dt>
                    <dd class="col-sm-9"><strong>@Model.VenderName</strong></dd>

                    <dt class="col-sm-3">Business Type:</dt>
                    <dd class="col-sm-9">@(Model.BusinessType ?? "N/A")</dd>

                    <dt class="col-sm-3">Contact:</dt>
                    <dd class="col-sm-9">@(Model.ContactPerson ?? "N/A") - @(Model.PhoneNumber ?? "N/A")</dd>

                    <dt class="col-sm-3">Location:</dt>
                    <dd class="col-sm-9">
                        @if (Model.City != null)
                        {
                            <span>@Model.City.Name, @Model.City.Country?.Name</span>
                        }
                        else
                        {
                            <span class="text-muted">N/A</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Bank:</dt>
                    <dd class="col-sm-9">@(Model.Bank?.BankName ?? "N/A")</dd>
                </dl>

                <form asp-action="Delete" method="post" class="mt-4">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Yes, Delete
                    </button>
                    <a href="/Venders" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>
