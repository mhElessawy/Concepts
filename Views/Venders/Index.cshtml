@model IEnumerable<Vender>

@{
    ViewData["Title"] = "Venders Management";
}

<div class="page-header">
    <h2><i class="bi bi-building"></i> Venders Management</h2>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add New Vendor
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>Vendor Name</th>
                            <th>Account No</th>
                            <th>Payment Terms</th>
                            <th>Cost Center</th>
                            <th>Contact</th>
                            <th>City</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var vendor in Model)
                        {
                            <tr>
                                <td><strong>@vendor.VenderCode</strong></td>
                                <td>@vendor.VenderName</td>
                                <td>@(vendor.AccountNo ?? "N/A")</td>
                                <td>@vendor.PaymentTerms Days</td>
                                <td>@(vendor.CostCenter?.CostCenterName ?? "N/A")</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(vendor.ContactPerson))
                                    {
                                        <div><i class="bi bi-person"></i> @vendor.ContactPerson</div>
                                    }
                                    @if (!string.IsNullOrEmpty(vendor.PhoneNumber))
                                    {
                                        <div><i class="bi bi-telephone"></i> @vendor.PhoneNumber</div>
                                    }
                                </td>
                                <td>
                                    @if (vendor.City != null)
                                    {
                                        <span>@vendor.City.Name, @vendor.City.Country?.Name</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    @if (vendor.Active)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@vendor.Id"
                                           class="btn btn-info" title="Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@vendor.Id"
                                           class="btn btn-warning" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@vendor.Id"
                                           class="btn btn-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info mt-4">
        <i class="bi bi-info-circle"></i> No venders found. Click "Add New Vendor" to create one.
    </div>
}