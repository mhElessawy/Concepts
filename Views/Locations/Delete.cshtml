@model DeffLocation

@{
    ViewData["Title"] = "Delete Location";
}

<div class="page-header">
    <h2><i class="bi bi-trash"></i> Delete Location</h2>
</div>

<div class="alert alert-danger">
    <h5><i class="bi bi-exclamation-triangle-fill"></i> Are you sure you want to delete this location?</h5>
    <p class="mb-0">This action will mark this location as inactive. This cannot be undone.</p>
</div>

<div class="card">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0"><i class="bi bi-pin-map"></i> Location Information</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <table class="table table-borderless">
                    <tr>
                        <th width="40%">Location Code:</th>
                        <td><strong class="text-primary fs-5">@Model.LocationCode</strong></td>
                    </tr>
                    <tr>
                        <th>Location Name:</th>
                        <td><strong>@Model.LocationName</strong></td>
                    </tr>
                    <tr>
                        <th>Account ID:</th>
                        <td>
                            @if (Model.AccountId != null)
                            {
                                <span class="badge bg-info">@Model.AccountId</span>
                            }
                            else
                            {
                                <span class="text-muted">Not set</span>
                            }
                        </td>
                    </tr>
                </table>
            </div>
            <div class="col-md-6">
                <table class="table table-borderless">
                    <tr>
                        <th width="40%">Status:</th>
                        <td>
                            @if (Model.Active)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </td>
                    </tr>
                    <tr>
                        <th>Created Date:</th>
                        <td>@Model.CreatedDate.ToString("dd/MM/yyyy")</td>
                    </tr>
                </table>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <hr />
            <div>
                <strong>Description:</strong><br />
                <p class="text-muted mb-0">@Model.Description</p>
            </div>
        }
    </div>
</div>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="d-flex justify-content-between mt-4 mb-4">
        <a asp-action="Index" class="btn btn-secondary btn-lg">
            <i class="bi bi-arrow-left"></i> Cancel
        </a>
        <button type="submit" class="btn btn-danger btn-lg">
            <i class="bi bi-trash-fill"></i> Confirm Delete
        </button>
    </div>
</form>

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        padding-bottom: 15px;
        border-bottom: 2px solid #dee2e6;
    }

    .page-header h2 {
        margin: 0;
        color: #dc3545;
    }

    .table-borderless th {
        font-weight: 600;
        color: #495057;
    }
</style>
