@model IEnumerable<DeffLocation>

@{
    ViewData["Title"] = "Locations";
}

<div class="page-header">
    <h2><i class="bi bi-pin-map"></i> Locations Management</h2>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add New Location
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row g-4">
    @foreach (var location in Model)
    {
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <h5 class="card-title mb-1">@location.LocationName</h5>
                            <small class="text-muted">
                                <i class="bi bi-upc-scan"></i> Code: <strong>@location.LocationCode</strong>
                            </small>
                        </div>
                        @if (location.Active)
                        {
                            <span class="badge bg-success">
                                <i class="bi bi-check-circle"></i> Active
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">
                                <i class="bi bi-x-circle"></i> Inactive
                            </span>
                        }
                    </div>

                    @if (!string.IsNullOrEmpty(location.Description))
                    {
                        <p class="card-text text-muted small mb-3">
                            @location.Description
                        </p>
                    }

                    @if (location.AccountId != null)
                    {
                        <div class="mb-3">
                            <small class="text-muted">
                                <i class="bi bi-wallet2"></i> Account ID: <strong>@location.AccountId</strong>
                            </small>
                        </div>
                    }

                    <div class="d-flex gap-2 mt-auto">
                        <a asp-action="Details" asp-route-id="@location.Id" class="btn btn-sm btn-info flex-fill">
                            <i class="bi bi-eye"></i> View
                        </a>
                        <a asp-action="Edit" asp-route-id="@location.Id" class="btn btn-sm btn-warning flex-fill">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@location.Id" class="btn btn-sm btn-danger flex-fill">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="alert alert-info mt-4">
        <i class="bi bi-info-circle"></i> No locations found.
        <a asp-action="Create" class="alert-link">Click here to add your first location</a>
    </div>
}

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        padding-bottom: 15px;
        border-bottom: 2px solid #dee2e6;
    }

    .page-header h2 {
        margin: 0;
        color: #2c3e50;
    }

    .card {
        transition: all 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 5px 20px rgba(0,0,0,0.15);
    }
</style>
