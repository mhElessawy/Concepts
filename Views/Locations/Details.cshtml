@model DeffLocation

@{
    ViewData["Title"] = "Location Details";
}

<div class="page-header">
    <h2><i class="bi bi-eye"></i> Location Details</h2>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="card">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="bi bi-info-circle"></i> Location Information</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <table class="table table-borderless">
                    <tr>
                        <th width="40%">Location Code:</th>
                        <td><strong class="text-primary fs-5">@Model.LocationCode</strong></td>
                    </tr>
                    <tr>
                        <th>Location Name:</th>
                        <td><strong>@Model.LocationName</strong></td>
                    </tr>
                    <tr>
                        <th>Account ID:</th>
                        <td>
                            @if (Model.AccountId != null)
                            {
                                <span class="badge bg-info">@Model.AccountId</span>
                            }
                            else
                            {
                                <span class="text-muted">Not set</span>
                            }
                        </td>
                    </tr>
                    <tr>
                        <th>Status:</th>
                        <td>
                            @if (Model.Active)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle-fill"></i> Active
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger">
                                    <i class="bi bi-x-circle-fill"></i> Inactive
                                </span>
                            }
                        </td>
                    </tr>
                </table>
            </div>
            <div class="col-md-6">
                <table class="table table-borderless">
                    <tr>
                        <th width="40%">Created Date:</th>
                        <td>@Model.CreatedDate.ToString("dd/MM/yyyy hh:mm tt")</td>
                    </tr>
                    <tr>
                        <th>Modified Date:</th>
                        <td>@Model.ModifiedDate.ToString("dd/MM/yyyy hh:mm tt")</td>
                    </tr>
                </table>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <hr />
            <div class="mt-3">
                <h6><i class="bi bi-file-text"></i> Description:</h6>
                <p class="text-muted">@Model.Description</p>
            </div>
        }
    </div>
</div>

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        padding-bottom: 15px;
        border-bottom: 2px solid #dee2e6;
    }

    .page-header h2 {
        margin: 0;
        color: #2c3e50;
    }

    .table-borderless th {
        font-weight: 600;
        color: #495057;
    }
</style>
