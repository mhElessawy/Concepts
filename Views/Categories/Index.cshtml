@model IEnumerable<DeffCategory>

@{
    ViewData["Title"] = "Categories";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <h2><i class="bi bi-tags"></i> Categories Management</h2>
    <a href="/Categories/Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add New Category
    </a>
</div>

<div class="row g-4">
    @foreach (var category in Model)
    {
        <div class="col-md-4">
            <div class="card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <h5 class="card-title mb-1">@category.Name</h5>
                            <small class="text-muted">Code: @category.Code</small>
                        </div>
                        @if (category.Active)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </div>

                    <div class="d-flex gap-2 mt-3">
                        <a href="/Categories/Edit/@category.Id" class="btn btn-sm btn-warning flex-fill">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a href="/Categories/Delete/@category.Id" class="btn btn-sm btn-danger flex-fill">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="alert alert-info mt-4">
        <i class="bi bi-info-circle"></i> No categories found. Click "Add New Category" to create one.
    </div>
}
