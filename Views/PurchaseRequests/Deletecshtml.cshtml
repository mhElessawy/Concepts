@model PurchaseRequestHeader

@{
    ViewData["Title"] = "Delete Purchase Request";
    var details = ViewBag.Details as List<PurchaseRequestDetails>;
}

<div class="page-header">
    <h2 class="text-danger"><i class="bi bi-exclamation-triangle"></i> Delete Purchase Request</h2>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card border-danger">
            <div class="card-body">
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    <strong>Warning!</strong> Are you sure you want to delete this purchase request and all its items?
                    This action cannot be undone.
                </div>

                <!-- Header Info -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-5">Request Code:</dt>
                            <dd class="col-sm-7">
                                <span class="badge bg-primary">@Model.RequestCode</span>
                            </dd>

                            <dt class="col-sm-5">Request No:</dt>
                            <dd class="col-sm-7">@Model.RequestNo</dd>

                            <dt class="col-sm-5">Request Date:</dt>
                            <dd class="col-sm-7">@Model.RequestDate.ToString("dd/MM/yyyy")</dd>

                            <dt class="col-sm-5">Department:</dt>
                            <dd class="col-sm-7">@Model.Department?.DepartmentName</dd>
                        </dl>
                    </div>

                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-5">Requested By:</dt>
                            <dd class="col-sm-7">@Model.User?.FullName</dd>

                            <dt class="col-sm-5">Vendor:</dt>
                            <dd class="col-sm-7">@Model.Vender?.VenderName</dd>

                            <dt class="col-sm-5">Status:</dt>
                            <dd class="col-sm-7">
                                @switch (Model.RequestedStatus)
                                {
                                    case 0:
                                        <span class="badge bg-warning">Pending</span>
                                        break;
                                    case 1:
                                        <span class="badge bg-success">Approved</span>
                                        break;
                                    case 2:
                                        <span class="badge bg-danger">Rejected</span>
                                        break;
                                }
                            </dd>

                            <dt class="col-sm-5">Total Items:</dt>
                            <dd class="col-sm-7">
                                <span class="badge bg-info">@details?.Count items</span>
                            </dd>
                        </dl>
                    </div>
                </div>

                <!-- Items Summary -->
                @if (details != null && details.Any())
                {
                    <h6 class="mb-3"><i class="bi bi-list"></i> Items to be deleted:</h6>
                    <div class="table-responsive mb-4">
                        <table class="table table-sm table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>#</th>
                                    <th>Sub Category</th>
                                    <th>Item</th>
                                    <th>Quantity</th>
                                    <th>Unit</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int counter = 1;
                                }
                                @foreach (var detail in details)
                                {
                                    <tr>
                                        <td>@counter</td>
                                        <td>@detail.SubCategory?.Name</td>
                                        <td>@detail.Item?.ItemName</td>
                                        <td class="text-end">@detail.Quantity.ToString("N3")</td>
                                        <td>@detail.SubUOM?.SubUOMName</td>
                                    </tr>
                                    counter++;
                                }
                            </tbody>
                        </table>
                    </div>
                }

                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Yes, Delete This Request
                    </button>
                    <a href="/PurchaseRequests" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>
