@model Concept.Models.StoreTransferHeader

@{
    ViewData["Title"] = "Transfer Details";
    var details = ViewBag.Details as List<Concept.Models.StoreTransferDetails>;
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-6">
            <h2>Transfer Details</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
            @if (Model.TransferStatus == 0)
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                <form asp-action="Approve" asp-route-id="@Model.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to approve this transfer?');">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Approve
                    </button>
                </form>
                <form asp-action="Reject" asp-route-id="@Model.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to reject this transfer?');">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-x-circle"></i> Reject
                    </button>
                </form>
            }
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card mb-3">
        <div class="card-header">
            <h5>Transfer Information</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <table class="table table-sm">
                        <tr>
                            <th style="width: 40%;">Transfer No:</th>
                            <td><span class="badge bg-primary">@Model.TransferNo</span></td>
                        </tr>
                        <tr>
                            <th>Transfer Code:</th>
                            <td>@Model.TransferCode</td>
                        </tr>
                        <tr>
                            <th>Transfer Type:</th>
                            <td>
                                @switch (Model.TransferType)
                                {
                                    case 1:
                                        <span class="badge bg-info">Warehouse to Warehouse</span>
                                        break;
                                    case 2:
                                        <span class="badge bg-primary">Warehouse to Department</span>
                                        break;
                                    case 3:
                                        <span class="badge bg-warning text-dark">Department to Warehouse</span>
                                        break;
                                    case 4:
                                        <span class="badge bg-secondary">Department to Department</span>
                                        break;
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>Transfer Date:</th>
                            <td>@Model.TransferDate.ToString("dd/MM/yyyy")</td>
                        </tr>
                        <tr>
                            <th>Transfer Time:</th>
                            <td>@Model.TransferTime.ToString("hh\\:mm")</td>
                        </tr>
                    </table>
                </div>
                <div class="col-md-6">
                    <table class="table table-sm">
                        <tr>
                            <th style="width: 40%;">From:</th>
                            <td>
                                @if (Model.TransferType == 1 || Model.TransferType == 2)
                                {
                                    @(Model.FromWarehouse?.WarehouseName ?? "N/A")
                                }
                                else
                                {
                                    @(Model.FromDepartment?.DepartmentName ?? "N/A")
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>To:</th>
                            <td>
                                @if (Model.TransferType == 1 || Model.TransferType == 3)
                                {
                                    @(Model.ToWarehouse?.WarehouseName ?? "N/A")
                                }
                                else
                                {
                                    @(Model.ToDepartment?.DepartmentName ?? "N/A")
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>Status:</th>
                            <td>
                                @switch (Model.TransferStatus)
                                {
                                    case 0:
                                        <span class="badge bg-warning text-dark">Pending</span>
                                        break;
                                    case 1:
                                        <span class="badge bg-success">Approved</span>
                                        break;
                                    case 2:
                                        <span class="badge bg-danger">Rejected</span>
                                        break;
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>User:</th>
                            <td>@(Model.User?.FullName ?? "N/A")</td>
                        </tr>
                        <tr>
                            <th>Created Date:</th>
                            <td>@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                    </table>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.AdditionalNotes))
            {
                <div class="row mt-3">
                    <div class="col-12">
                        <strong>Additional Notes:</strong>
                        <p>@Model.AdditionalNotes</p>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5>Transfer Items</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-sm">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>Category</th>
                            <th>Sub Category</th>
                            <th>Item</th>
                            <th>Batch No</th>
                            <th>Quantity</th>
                            <th>UOM</th>
                            <th>Sub UOM</th>
                            <th>Pack Size</th>
                            <th>Value/Unit</th>
                            <th>Price</th>
                            <th>Total</th>
                            <th>Expired Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (details != null && details.Any())
                        {
                            decimal grandTotal = 0;
                            int counter = 1;
                            @foreach (var item in details)
                            {
                                grandTotal += item.TotalType;
                                <tr>
                                    <td>@counter</td>
                                    <td>@(item.Category?.Name ?? "N/A")</td>
                                    <td>@(item.SubCategory?.Name ?? "N/A")</td>
                                    <td>@(item.Item?.ItemName ?? "N/A")</td>
                                    <td>@item.BatchNo</td>
                                    <td>@item.Quantity.ToString("N2")</td>
                                    <td>@(item.UOM?.UOMName ?? "N/A")</td>
                                    <td>@(item.SubUOM?.SubUOMName ?? "N/A")</td>
                                    <td>@(item.PackSize ?? 0)</td>
                                    <td>@item.ValueOrUnit.ToString("N2")</td>
                                    <td>@item.PriceType.ToString("N2")</td>
                                    <td>@item.TotalType.ToString("N2")</td>
                                    <td>@item.ExpiredDate.ToString("dd/MM/yyyy")</td>
                                </tr>
                                counter++;
                            }
                            <tr class="table-info">
                                <td colspan="11" class="text-end"><strong>Grand Total:</strong></td>
                                <td colspan="2"><strong>@grandTotal.ToString("N2")</strong></td>
                            </tr>
                        }
                        else
                        {
                            <tr>
                                <td colspan="13" class="text-center">No items found</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-hide alerts after 5 seconds
        setTimeout(function () {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
