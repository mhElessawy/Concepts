@model IEnumerable<DeffCity>

@{
    ViewData["Title"] = "Cities";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <h2><i class="bi bi-geo-alt"></i> Cities Management</h2>
    <a href="/Cities/Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add New City
    </a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>City Name</th>
                        <th>Country</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var city in Model)
                    {
                        <tr>
                            <td><span class="badge bg-secondary">@city.Code</span></td>
                            <td>@city.Name</td>
                            <td><span class="badge bg-primary">@city.Country.Name</span></td>
                            <td>
                                @if (city.Active)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td class="action-buttons">
                                <a href="/Cities/Edit/@city.Id" class="btn btn-sm btn-warning" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a href="/Cities/Delete/@city.Id" class="btn btn-sm btn-danger" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info mt-4">
        <i class="bi bi-info-circle"></i> No cities found. Click "Add New City" to create one.
    </div>
}