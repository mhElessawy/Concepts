@model StoreItem

@{
    ViewData["Title"] = "Item Details";
}

<div class="page-header">
    <h2><i class="bi bi-eye"></i> Item Details</h2>
</div>

<div class="row">
    <div class="col-md-10 mx-auto">
        <div class="card">
            <div class="card-body p-4">
                <div class="row g-3">
                    <!-- Basic Information -->
                    <div class="col-12">
                        <h5 class="text-primary mb-3">
                            <i class="bi bi-info-circle"></i> Basic Information
                        </h5>
                    </div>

                    <div class="col-md-6">
                        <strong>Item Code:</strong>
                        <p class="mb-2"><span class="badge bg-primary">@Model.ItemCode</span></p>
                    </div>

                    <div class="col-md-6">
                        <strong>Reference Code:</strong>
                        <p class="mb-2">@(Model.HRCode ?? "N/A")</p>
                    </div>

                    <div class="col-md-6">
                        <strong>Item Name:</strong>
                        <p class="mb-2">@Model.ItemName</p>
                    </div>

                    <div class="col-md-6">
                        <strong>Short Name:</strong>
                        <p class="mb-2">@Model.ShortItemName</p>
                    </div>

                    <div class="col-md-12">
                        <strong>Description:</strong>
                        <p class="mb-2">@(Model.Description ?? "No description")</p>
                    </div>

                    <!-- Category and Location -->
                    <div class="col-12 mt-4">
                        <h5 class="text-primary mb-3">
                            <i class="bi bi-tags"></i> Category & Location
                        </h5>
                    </div>

                    <div class="col-md-6">
                        <strong>Category:</strong>
                        <p class="mb-2">@Model.SubCategory?.Category?.Name</p>
                    </div>

                    <div class="col-md-6">
                        <strong>Sub Category:</strong>
                        <p class="mb-2">@Model.SubCategory?.Name</p>
                    </div>

                    <div class="col-md-6">
                        <strong>Unit of Measure:</strong>
                        <p class="mb-2">@Model.SubUOM?.UOM?.UOMName - @Model.SubUOM?.SubUOMName</p>
                    </div>

                    <div class="col-md-6">
                        <strong>Pack Size:</strong>
                        <p class="mb-2">@(Model.PackSize?.ToString() ?? "N/A")</p>
                    </div>

                    <div class="col-md-6">
                        <strong>Country:</strong>
                        <p class="mb-2">@(Model.Country?.Name ?? "N/A")</p>
                    </div>

                    <div class="col-md-6">
                        <strong>Barcode:</strong>
                        <p class="mb-2">@(Model.HSBarcode ?? "N/A")</p>
                    </div>

                    <!-- Inventory -->
                    <div class="col-12 mt-4">
                        <h5 class="text-primary mb-3">
                            <i class="bi bi-box"></i> Inventory
                        </h5>
                    </div>

                    <div class="col-md-4">
                        <strong>Quantity in Store:</strong>
                        <p class="mb-2">
                            @if (Model.QuantityInStore < 10)
                            {
                                <span class="badge bg-danger fs-6">@Model.QuantityInStore</span>
                            }
                            else if (Model.QuantityInStore < 50)
                            {
                                <span class="badge bg-warning text-dark fs-6">@Model.QuantityInStore</span>
                            }
                            else
                            {
                                <span class="badge bg-success fs-6">@Model.QuantityInStore</span>
                            }
                        </p>
                    </div>

                    <div class="col-md-4">
                        <strong>Minimum Level:</strong>
                        <p class="mb-2">@(Model.MinCity?.ToString() ?? "N/A")</p>
                    </div>

                    <div class="col-md-4">
                        <strong>Maximum Level:</strong>
                        <p class="mb-2">@(Model.MaxCity?.ToString() ?? "N/A")</p>
                    </div>

                    <!-- Pricing -->
                    <div class="col-12 mt-4">
                        <h5 class="text-primary mb-3">
                            <i class="bi bi-cash-stack"></i> Pricing
                        </h5>
                    </div>

                    <div class="col-md-6">
                        <strong>Purchase Price:</strong>
                        <p class="mb-2 text-success fs-5">$@Model.PurchaseValue.ToString("N2")</p>
                    </div>

                    <div class="col-md-6">
                        <strong>Sale Price:</strong>
                        <p class="mb-2 text-primary fs-5">$@Model.SaleValue.ToString("N2")</p>
                    </div>

                    <div class="col-md-6">
                        <strong>Default Purchase Price:</strong>
                        <p class="mb-2">$@Model.PurchaseValueDefault.ToString("N2")</p>
                    </div>

                    <div class="col-md-6">
                        <strong>Default Sale Price:</strong>
                        <p class="mb-2">$@Model.SaleValueDefault.ToString("N2")</p>
                    </div>

                    <!-- Additional Info -->
                    <div class="col-12 mt-4">
                        <h5 class="text-primary mb-3">
                            <i class="bi bi-gear"></i> Additional Information
                        </h5>
                    </div>

                    <div class="col-md-6">
                        <strong>Weight:</strong>
                        <p class="mb-2">@(Model.OperationWeight ?? "N/A")</p>
                    </div>

                    <div class="col-md-6">
                        <strong>Status:</strong>
                        <p class="mb-2">
                            @if (Model.Active)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </p>
                    </div>

                    <div class="col-md-6">
                        <strong>Created Date:</strong>
                        <p class="mb-2">@Model.CreatedDate.ToString("MM/dd/yyyy HH:mm")</p>
                    </div>

                    <div class="col-md-6">
                        <strong>Modified Date:</strong>
                        <p class="mb-2">@Model.ModifiedDate.ToString("MM/dd/yyyy HH:mm")</p>
                    </div>

                    <div class="col-md-12">
                        <strong>Operations:</strong>
                        <p class="mb-2">@(Model.OperationsOrOperations ?? "No operations info")</p>
                    </div>

                    <!-- Action Buttons -->
                    <div class="col-12 mt-4">
                        <a href="/Items/Edit/@Model.Id" class="btn btn-warning">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a href="/Items" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>