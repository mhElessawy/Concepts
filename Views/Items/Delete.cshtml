@model StoreItem

@{
    ViewData["Title"] = "Delete Item";
}

<div class="page-header">
    <h2 class="text-danger"><i class="bi bi-exclamation-triangle"></i> Delete Item</h2>
</div>

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card border-danger">
            <div class="card-body p-4">
                <h4>Are you sure you want to delete this item?</h4>
                <hr>

                <dl class="row">
                    <dt class="col-sm-4">Item Code:</dt>
                    <dd class="col-sm-8"><span class="badge bg-primary">@Model.ItemCode</span></dd>

                    <dt class="col-sm-4">Item Name:</dt>
                    <dd class="col-sm-8">@Model.ItemName</dd>

                    <dt class="col-sm-4">Category:</dt>
                    <dd class="col-sm-8">@Model.SubCategory?.Category?.Name - @Model.SubCategory?.Name</dd>

                    <dt class="col-sm-4">Quantity in Store:</dt>
                    <dd class="col-sm-8">
                        @if (Model.QuantityInStore < 10)
                        {
                            <span class="badge bg-danger">@Model.QuantityInStore</span>
                        }
                        else
                        {
                            <span class="badge bg-success">@Model.QuantityInStore</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Purchase Price:</dt>
                    <dd class="col-sm-8">$@Model.PurchaseValue.ToString("N2")</dd>

                    <dt class="col-sm-4">Sale Price:</dt>
                    <dd class="col-sm-8">$@Model.SaleValue.ToString("N2")</dd>

                    <dt class="col-sm-4">Status:</dt>
                    <dd class="col-sm-8">
                        @if (Model.Active)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                    </dd>
                </dl>

                <div class="alert alert-warning">
                    <i class="bi bi-info-circle"></i> <strong>Note:</strong> This will mark the item as inactive, not permanently delete it.
                </div>

                <form asp-action="Delete" method="post" class="mt-4">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Confirm Delete
                    </button>
                    <a href="/Items" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>
