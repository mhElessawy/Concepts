@model IEnumerable<StoreItem>

@{
    ViewData["Title"] = "Items";
}

<div class="page-header d-flex justify-content-between align-items-center">
    <h2><i class="bi bi-box"></i> Items Management</h2>
    <a href="/Items/Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add New Item
    </a>
</div>

<div class="row mb-4">
    <div class="col-md-6">
        <form method="get">
            <div class="search-box">
                <input type="text" name="searchString" class="form-control" placeholder="Search for items...">
                <i class="bi bi-search"></i>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Sub Category</th>
                        <th>Quantity</th>
                        <th>Purchase Price</th>
                        <th>Sale Price</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><span class="badge bg-secondary">@item.ItemCode</span></td>
                            <td>@item.ItemName</td>
                            <td>@item.SubCategory?.Name</td>
                            <td>
                                @if (item.QuantityInStore < 10)
                                {
                                    <span class="badge bg-danger">@item.QuantityInStore</span>
                                }
                                else if (item.QuantityInStore < 50)
                                {
                                    <span class="badge bg-warning text-dark">@item.QuantityInStore</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">@item.QuantityInStore</span>
                                }
                            </td>
                            <td>$@item.PurchaseValue.ToString("N2")</td>
                            <td>$@item.SaleValue.ToString("N2")</td>
                            <td>
                                @if (item.Active)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td class="action-buttons">
                                <a href="/Items/Details/@item.Id" class="btn btn-sm btn-info" title="View">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="/Items/Edit/@item.Id" class="btn btn-sm btn-warning" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a href="/Items/Delete/@item.Id" class="btn btn-sm btn-danger" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info mt-4">
        <i class="bi bi-info-circle"></i> No items found. Click "Add New Item" to create one.
    </div>
}
