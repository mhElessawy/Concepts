@model DeffSubCategory

@{
    ViewData["Title"] = "Add Sub Category";
}

<div class="page-header">
    <h2><i class="bi bi-plus-circle"></i> Add New Sub Category</h2>
</div>

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card">
            <div class="card-body p-4">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Code" class="form-label">Sub Category Code <span class="text-danger">*</span></label>
                        <input asp-for="Code" class="form-control" placeholder="e.g., MOB" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Sub Category Name <span class="text-danger">*</span></label>
                        <input asp-for="Name" class="form-control" placeholder="e.g., Mobile Phones" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CategoryId" class="form-label">Parent Category <span class="text-danger">*</span></label>
                        <select asp-for="CategoryId" class="form-select">
                            <option value="">-- Select Category --</option>
                            @foreach (var category in ViewBag.Categories as List<DeffCategory>)
                            {
                                <option value="@category.Id">@category.Name</option>
                            }
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="AccountId" class="form-label">Account ID</label>
                        <input asp-for="AccountId" type="number" class="form-control" placeholder="Optional" />
                    </div>

                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input asp-for="Active" class="form-check-input" type="checkbox" checked />
                            <label asp-for="Active" class="form-check-label">Active</label>
                        </div>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Save
                        </button>
                        <a href="/SubCategories" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}