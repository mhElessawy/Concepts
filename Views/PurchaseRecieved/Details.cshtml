@model PurchaseRecievedHeader

@{
    ViewData["Title"] = "Purchase Received Details";
    var details = ViewBag.Details as List<PurchaseRecievedDetails>;
}

<div class="page-header">
    <h2><i class="bi bi-eye"></i> Purchase Received Details</h2>
    <div>
        @if (Model.Approved == 0)
        {
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Edit
            </a>
        }
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<!-- Header Information Card -->
<div class="card mb-3">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="bi bi-file-text"></i> Receive Information</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <table class="table table-borderless">
                    <tr>
                        <th width="40%">Receive No:</th>
                        <td><strong class="text-primary">@Model.RecieveNo</strong></td>
                    </tr>
                    <tr>
                        <th>Receive Date:</th>
                        <td>@Model.RecieveDate.ToString("dd/MM/yyyy")</td>
                    </tr>
                    <tr>
                        <th>Receive Time:</th>
                        <td>@Model.RecieveTime.ToString("hh\\:mm")</td>
                    </tr>
                    <tr>
                        <th>Batch No:</th>
                        <td>@Model.BatchNo</td>
                    </tr>
                    <tr>
                        <th>Warehouse:</th>
                        <td><span class="badge bg-info">@Model.Warehouse?.WarehouseName</span></td>
                    </tr>
                </table>
            </div>
            <div class="col-md-6">
                <table class="table table-borderless">
                    <tr>
                        <th width="40%">Vendor:</th>
                        <td>@Model.Vender?.VenderName</td>
                    </tr>
                    <tr>
                        <th>Vendor Invoice No:</th>
                        <td>@Model.VenderInvoiceNo</td>
                    </tr>
                    <tr>
                        <th>Payment Terms:</th>
                        <td>@Model.PaymentTerms Days</td>
                    </tr>
                    <tr>
                        <th>Received By:</th>
                        <td>@Model.User?.FullName</td>
                    </tr>
                    <tr>
                        <th>Status:</th>
                        <td>
                            @switch (Model.Approved)
                            {
                                case 0:
                                    <span class="badge bg-warning text-dark">
                                        <i class="bi bi-hourglass-split"></i> Pending
                                    </span>
                                    break;
                                case 1:
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle-fill"></i> Approved
                                    </span>
                                    break;
                                case 2:
                                    <span class="badge bg-danger">
                                        <i class="bi bi-x-circle-fill"></i> Rejected
                                    </span>
                                    break;
                            }
                        </td>
                    </tr>
                </table>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.AdditionalNotes))
        {
            <div class="alert alert-info mt-3">
                <strong><i class="bi bi-sticky"></i> Additional Notes:</strong><br />
                @Model.AdditionalNotes
            </div>
        }
    </div>
</div>

<!-- Items Details Card -->
<div class="card mb-3">
    <div class="card-header bg-success text-white">
        <h5 class="mb-0"><i class="bi bi-list-ul"></i> Received Items</h5>
    </div>
    <div class="card-body">
        @if (details != null && details.Any())
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Item Name</th>
                            <th>Order Qty</th>
                            <th>Receive Qty</th>
                            <th>Pending Qty</th>
                            <th>Free Qty</th>
                            <th>Total Qty</th>
                            <th>Unit Price</th>
                            <th>Total Price</th>
                            <th>Discount</th>
                            <th>Net Price</th>
                            <th>Expired Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int counter = 1;
                        }
                        @foreach (var item in details)
                        {
                            <tr>
                                <td>@counter</td>
                                <td>@item.StoreItem?.ItemName</td>
                                <td class="text-end">@item.OrderQuantity.ToString("N2")</td>
                                <td class="text-end">@item.RecieveQuantity.ToString("N2")</td>
                                <td class="text-end">@item.PendingQuantity.ToString("N2")</td>
                                <td class="text-end">@item.FreeQuantity.ToString("N2")</td>
                                <td class="text-end fw-bold">@item.TotalQuantity.ToString("N2")</td>
                                <td class="text-end">@item.UnitPrice.ToString("N2")</td>
                                <td class="text-end">@item.TotalPrice.ToString("N2")</td>
                                <td class="text-end">@item.Discount.ToString("N2")</td>
                                <td class="text-end fw-bold">@item.NetPrice.ToString("N2")</td>
                                <td>@item.ExpiredDate.ToString("dd/MM/yyyy")</td>
                            </tr>
                            counter++;
                        }
                    </tbody>
                    <tfoot class="table-light">
                        <tr>
                            <th colspan="8" class="text-end">Total Before Discount:</th>
                            <th class="text-end">@ViewBag.TotalBeforeDiscount.ToString("N2")</th>
                            <th class="text-end">@ViewBag.TotalDiscount.ToString("N2")</th>
                            <th class="text-end text-success fs-5">@ViewBag.GrandTotal.ToString("N2")</th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle"></i> No items found in this purchase received record.
            </div>
        }
    </div>
</div>

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 2px solid #dee2e6;
    }

        .page-header h2 {
            margin: 0;
            color: #2c3e50;
        }
</style>
