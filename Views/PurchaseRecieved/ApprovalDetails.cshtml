@model PurchaseRecievedHeader

@{
    ViewData["Title"] = "Review & Approve Purchase Received";
    var details = ViewBag.Details as List<PurchaseRecievedDetails>;
    var grandTotal = ViewBag.GrandTotal;
}

<div class="page-header">
    <h2><i class="bi bi-clipboard-check"></i> Review & Approve Purchase Received</h2>
</div>

<div class="row">
    <div class="col-md-12">
        <!-- Header Information -->
        <div class="card mb-3 border-warning">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">
                    <i class="bi bi-info-circle"></i> Received Information - @Model.RecieveNo
                    <span class="badge bg-warning float-end">
                        <i class="bi bi-hourglass-split"></i> PENDING APPROVAL
                    </span>
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Receive No:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-primary fs-6">@Model.RecieveNo</span>
                            </dd>

                            <dt class="col-sm-4">Receive Date:</dt>
                            <dd class="col-sm-8">
                                @Model.RecieveDate.ToString("dd/MM/yyyy")
                            </dd>

                            <dt class="col-sm-4">Batch No:</dt>
                            <dd class="col-sm-8">@Model.BatchNo</dd>

                            <dt class="col-sm-4">Warehouse:</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-info">@Model.Warehouse?.WarehouseName</span>
                            </dd>
                        </dl>
                    </div>

                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-5">Received By:</dt>
                            <dd class="col-sm-7">
                                <strong>@Model.User?.FullName</strong>
                                <small class="text-muted">(@Model.User?.UserCode)</small>
                            </dd>

                            <dt class="col-sm-5">Vendor:</dt>
                            <dd class="col-sm-7">
                                <strong>@Model.Vender?.VenderName</strong>
                            </dd>

                            <dt class="col-sm-5">Vendor Invoice No:</dt>
                            <dd class="col-sm-7">@Model.VenderInvoiceNo</dd>

                            <dt class="col-sm-5">Created Date:</dt>
                            <dd class="col-sm-7">
                                <small>@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</small>
                            </dd>
                        </dl>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.AdditionalNotes))
                    {
                        <div class="col-md-12 mt-3">
                            <div class="alert alert-info">
                                <strong><i class="bi bi-sticky"></i> Additional Notes:</strong><br>
                                @Model.AdditionalNotes
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Received Items -->
        <div class="card mb-3">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">
                    <i class="bi bi-list-ul"></i> Received Items
                    <span class="badge bg-light text-dark">@details?.Count items</span>
                </h5>
            </div>
            <div class="card-body">
                @if (details != null && details.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-bordered table-sm">
                            <thead class="table-light">
                                <tr>
                                    <th width="3%">#</th>
                                    <th width="15%">Item</th>
                                    <th width="8%">Order Qty</th>
                                    <th width="8%">Receive Qty</th>
                                    <th width="8%">Free Qty</th>
                                    <th width="8%">Total Qty</th>
                                    <th width="8%">Unit Price</th>
                                    <th width="10%">Total Price</th>
                                    <th width="8%">Discount</th>
                                    <th width="10%">Net Price</th>
                                    <th width="10%">Expired</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int counter = 1;
                                }
                                @foreach (var detail in details)
                                {
                                    <tr>
                                        <td class="text-center">@counter</td>
                                        <td>
                                            <strong>@detail.StoreItem?.ItemName</strong><br>
                                            <small class="text-muted">@detail.StoreItem?.ItemCode</small>
                                        </td>
                                        <td class="text-end">@detail.OrderQuantity.ToString("N2")</td>
                                        <td class="text-end">@detail.RecieveQuantity.ToString("N2")</td>
                                        <td class="text-end text-success">@detail.FreeQuantity.ToString("N2")</td>
                                        <td class="text-end fw-bold">@detail.TotalQuantity.ToString("N2")</td>
                                        <td class="text-end">@detail.UnitPrice.ToString("N2")</td>
                                        <td class="text-end">@detail.TotalPrice.ToString("N2")</td>
                                        <td class="text-end text-danger">@detail.Discount.ToString("N2")</td>
                                        <td class="text-end fw-bold text-success">@detail.NetPrice.ToString("N2")</td>
                                        <td class="text-center">
                                            <small>@detail.ExpiredDate.ToString("dd/MM/yyyy")</small>
                                        </td>
                                    </tr>
                                    counter++;
                                }
                            </tbody>
                            <tfoot>
                                <tr class="table-success fw-bold">
                                    <td colspan="9" class="text-end fs-5">Grand Total:</td>
                                    <td class="text-end text-success fs-5">@grandTotal.ToString("N2")</td>
                                    <td></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                }
            </div>
        </div>

        <!-- Approval Actions -->
        <div class="card mb-3 border-primary">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-shield-check"></i> Approval Decision</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <!-- Approve Section -->
                    <div class="col-md-6">
                        <div class="card border-success h-100">
                            <div class="card-body">
                                <h6 class="text-success">
                                    <i class="bi bi-check-circle-fill"></i> Approve Received
                                </h6>
                                <form asp-action="Approve" method="post" onsubmit="return confirm('Are you sure you want to APPROVE this purchase received?');">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@Model.Id" />

                                    <div class="mb-3">
                                        <label class="form-label">Approval Notes (Optional)</label>
                                        <textarea name="approvalNotes" class="form-control" rows="3"
                                                  placeholder="Enter any approval notes..."></textarea>
                                    </div>

                                    <button type="submit" class="btn btn-success btn-lg w-100">
                                        <i class="bi bi-check-circle"></i> Approve Received
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- Reject Section -->
                    <div class="col-md-6">
                        <div class="card border-danger h-100">
                            <div class="card-body">
                                <h6 class="text-danger">
                                    <i class="bi bi-x-circle-fill"></i> Reject Received
                                </h6>
                                <form asp-action="Reject" method="post" onsubmit="return confirm('Are you sure you want to REJECT this purchase received?');">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@Model.Id" />

                                    <div class="mb-3">
                                        <label class="form-label">
                                            Rejection Reason <span class="text-danger">*</span>
                                        </label>
                                        <textarea name="rejectionReason" class="form-control" rows="3"
                                                  placeholder="Enter reason for rejection..." required></textarea>
                                    </div>

                                    <button type="submit" class="btn btn-danger btn-lg w-100">
                                        <i class="bi bi-x-circle"></i> Reject Received
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Back Button -->
        <div class="mb-4">
            <a asp-action="PendingApproval" class="btn btn-secondary btn-lg">
                <i class="bi bi-arrow-left"></i> Back to Pending Records
            </a>
        </div>
    </div>
</div>

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 2px solid #dee2e6;
    }

        .page-header h2 {
            margin: 0;
            color: #2c3e50;
        }
</style>
