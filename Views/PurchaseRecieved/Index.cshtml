@model IEnumerable<PurchaseRecievedHeader>

@{
    ViewData["Title"] = "Purchase Received";
    var filter = ViewBag.Filter ?? "all";
    var canApprove = ViewBag.CanApprove ?? false;
    var pendingCount = ViewBag.PendingCount ?? 0;
}

<div class="page-header">
    <h2><i class="bi bi-inbox"></i> Purchase Received Management</h2>
    <div>
        @if (canApprove && pendingCount > 0)
        {
            <a asp-action="PendingApproval" class="btn btn-warning">
                <i class="bi bi-clipboard-check"></i> Pending Approval
                <span class="badge bg-white text-warning">@pendingCount</span>
            </a>
        }
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> New Purchase Received
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Filter Tabs -->
<div class="card mb-3">
    <div class="card-body">
        <ul class="nav nav-pills" role="tablist">
            <li class="nav-item" role="presentation">
                <a class="nav-link @(filter == "all" ? "active" : "")"
                   href="/PurchaseRecieved?filter=all">
                    <i class="bi bi-list-ul"></i> All Records
                    <span class="badge bg-primary">@ViewBag.AllCount</span>
                </a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link @(filter == "pending" ? "active" : "")"
                   href="/PurchaseRecieved?filter=pending">
                    <i class="bi bi-hourglass-split"></i> Not Approved
                    <span class="badge bg-warning">@ViewBag.NotApprovedCount</span>
                </a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link @(filter == "approved" ? "active" : "")"
                   href="/PurchaseRecieved?filter=approved">
                    <i class="bi bi-check-circle"></i> Approved
                    <span class="badge bg-success">@ViewBag.ApprovedCount</span>
                </a>
            </li>
            <li class="nav-item" role="presentation">
                <a class="nav-link @(filter == "rejected" ? "active" : "")"
                   href="/PurchaseRecieved?filter=rejected">
                    <i class="bi bi-x-circle"></i> Rejected
                    <span class="badge bg-danger">@ViewBag.RejectedCount</span>
                </a>
            </li>
        </ul>
    </div>
</div>

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Receive No</th>
                            <th>Receive Date</th>
                            <th>Warehouse</th>
                            <th>Vendor</th>
                            <th>Batch No</th>
                            <th>Received By</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong class="text-primary">@item.RecieveNo</strong>
                                </td>
                                <td>@item.RecieveDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <span class="badge bg-info">@item.Warehouse?.WarehouseName</span>
                                </td>
                                <td>@item.Vender?.VenderName</td>
                                <td>@item.BatchNo</td>
                                <td>@item.User?.FullName</td>
                                <td>
                                    @switch (item.Approved)
                                    {
                                        case 0:
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-hourglass-split"></i> Pending
                                            </span>
                                            break;
                                        case 1:
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle-fill"></i> Approved
                                            </span>
                                            break;
                                        case 2:
                                            <span class="badge bg-danger">
                                                <i class="bi bi-x-circle-fill"></i> Rejected
                                            </span>
                                            break;
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="btn btn-info" title="View Details">
                                            <i class="bi bi-eye"></i>
                                        </a>

                                        @if (canApprove && item.Approved == 0)
                                        {
                                            <a asp-action="ApprovalDetails" asp-route-id="@item.Id"
                                               class="btn btn-success" title="Review & Approve">
                                                <i class="bi bi-clipboard-check"></i>
                                            </a>
                                        }

                                        @if (item.Approved == 0)
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.Id"
                                               class="btn btn-warning" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>

                                            <a asp-action="Delete" asp-route-id="@item.Id"
                                               class="btn btn-danger" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> No purchase received records found.
                <a asp-action="Create" class="alert-link">Create your first record</a>
            </div>
        }
    </div>
</div>

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 2px solid #dee2e6;
    }

        .page-header h2 {
            margin: 0;
            color: #2c3e50;
        }

    .nav-pills .nav-link {
        color: #495057;
        border-radius: 0.375rem;
        margin-right: 0.5rem;
    }

        .nav-pills .nav-link.active {
            background-color: #0d6efd;
        }

    .badge {
        margin-left: 5px;
    }
</style>
