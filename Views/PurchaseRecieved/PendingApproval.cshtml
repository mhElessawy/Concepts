@model IEnumerable<PurchaseRecievedHeader>

@{
    ViewData["Title"] = "Pending Purchase Received - Approval";
}

<div class="page-header">
    <h2><i class="bi bi-clipboard-check"></i> Pending Purchase Received - Approval</h2>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="alert alert-info mb-3">
                <i class="bi bi-info-circle"></i>
                <strong>@Model.Count()</strong> purchase received record(s) waiting for your approval.
            </div>

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Receive No</th>
                            <th>Receive Date</th>
                            <th>Warehouse</th>
                            <th>Vendor</th>
                            <th>Batch No</th>
                            <th>Received By</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong class="text-primary">@item.RecieveNo</strong>
                                </td>
                                <td>@item.RecieveDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <span class="badge bg-info">@item.Warehouse?.WarehouseName</span>
                                </td>
                                <td>@item.Vender?.VenderName</td>
                                <td>@item.BatchNo</td>
                                <td>@item.User?.FullName</td>
                                <td>
                                    <span class="badge bg-warning text-dark">
                                        <i class="bi bi-hourglass-split"></i> Pending Approval
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="ApprovalDetails" asp-route-id="@item.Id"
                                           class="btn btn-primary" title="View & Approve">
                                            <i class="bi bi-eye"></i> Review
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-success text-center py-5">
                <i class="bi bi-check-circle fs-1 d-block mb-3"></i>
                <h5>No Pending Records</h5>
                <p class="mb-0">All purchase received records have been reviewed.</p>
            </div>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to All Records
    </a>
</div>

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 2px solid #dee2e6;
    }

        .page-header h2 {
            margin: 0;
            color: #2c3e50;
        }
</style>
