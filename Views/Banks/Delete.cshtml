@model DefBank

@{
    ViewData["Title"] = "Delete Bank";
}

<div class="page-header">
    <h2 class="text-danger"><i class="bi bi-exclamation-triangle"></i> Delete Bank</h2>
</div>

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card border-danger">
            <div class="card-body p-4">
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    Are you sure you want to delete this bank?
                </div>

                <dl class="row">
                    <dt class="col-sm-4">Bank Code:</dt>
                    <dd class="col-sm-8">@Model.BankCode</dd>

                    <dt class="col-sm-4">Bank Name:</dt>
                    <dd class="col-sm-8">@Model.BankName</dd>

                    <dt class="col-sm-4">Status:</dt>
                    <dd class="col-sm-8">
                        @if (Model.Active)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Inactive</span>
                        }
                    </dd>
                </dl>

                <form asp-action="Delete" method="post" class="mt-4">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                    <a href="/Banks" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>