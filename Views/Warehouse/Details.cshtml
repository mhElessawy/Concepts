@model Warehouse

@{
    ViewData["Title"] = "Warehouse Details";
}

<div class="page-header">
    <h2><i class="bi bi-eye"></i> Warehouse Details</h2>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<!-- Basic Information Card -->
<div class="card mb-3">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="bi bi-info-circle"></i> Basic Information</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <table class="table table-borderless">
                    <tr>
                        <th width="40%">Warehouse Code:</th>
                        <td><strong class="text-primary fs-5">@Model.WarehouseCode</strong></td>
                    </tr>
                    <tr>
                        <th>Warehouse Name:</th>
                        <td><strong>@Model.WarehouseName</strong></td>
                    </tr>
                    <tr>
                        <th>Warehouse Type:</th>
                        <td>
                            @switch (Model.WarehouseType)
                            {
                                case 0:
                                    <span class="badge bg-secondary">Standard</span>
                                    break;
                                case 1:
                                    <span class="badge bg-primary">Cold Storage</span>
                                    break;
                                case 2:
                                    <span class="badge bg-warning text-dark">Distribution Center</span>
                                    break;
                                case 3:
                                    <span class="badge bg-info">Transit Hub</span>
                                    break;
                                case 4:
                                    <span class="badge bg-danger">Returns Center</span>
                                    break;
                                default:
                                    <span class="badge bg-dark">Type @Model.WarehouseType</span>
                                    break;
                            }
                        </td>
                    </tr>
                    <tr>
                        <th>Status:</th>
                        <td>
                            @if (Model.Active)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle-fill"></i> Active
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger">
                                    <i class="bi bi-x-circle-fill"></i> Inactive
                                </span>
                            }
                        </td>
                    </tr>
                </table>
            </div>
            <div class="col-md-6">
                <table class="table table-borderless">
                    <tr>
                        <th width="40%">Created Date:</th>
                        <td>@Model.CreatedDate.ToString("dd/MM/yyyy hh:mm tt")</td>
                    </tr>
                    <tr>
                        <th>Modified Date:</th>
                        <td>@Model.ModifiedDate.ToString("dd/MM/yyyy hh:mm tt")</td>
                    </tr>
                    <tr>
                        <th>IVM Code:</th>
                        <td>@Model.IVM</td>
                    </tr>
                </table>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <div class="alert alert-info mt-3">
                <strong><i class="bi bi-info-circle"></i> Description:</strong><br />
                @Model.Description
            </div>
        }
    </div>
</div>

<!-- Location Information Card -->
<div class="card mb-3">
    <div class="card-header bg-info text-white">
        <h5 class="mb-0"><i class="bi bi-geo-alt"></i> Location Information</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <table class="table table-borderless">
                    <tr>
                        <th width="40%">Country:</th>
                        <td>
                            <span class="badge bg-primary">@Model.Country?.Name</span>
                        </td>
                    </tr>
                    <tr>
                        <th>Country Code:</th>
                        <td>@Model.Country?.Code</td>
                    </tr>
                </table>
            </div>
            <div class="col-md-6">
                <table class="table table-borderless">
                    <tr>
                        <th width="40%">Location:</th>
                        <td>
                            <span class="badge bg-info">@Model.Location?.LocationName</span>
                        </td>
                    </tr>
                    <tr>
                        <th>Location Code:</th>
                        <td>@Model.Location?.LocationCode</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Management Information Card -->
<div class="card mb-3">
    <div class="card-header bg-success text-white">
        <h5 class="mb-0"><i class="bi bi-person-badge"></i> Management Information</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <table class="table table-borderless">
                    <tr>
                        <th width="40%">Assigned User:</th>
                        <td>
                            <i class="bi bi-person-circle"></i> @Model.User?.FullName
                        </td>
                    </tr>
                    <tr>
                        <th>User Email:</th>
                        <td>@Model.User?.Email</td>
                    </tr>
                    <tr>
                        <th>Manager Name:</th>
                        <td>@Model.ManagerName</td>
                    </tr>
                </table>
            </div>
            <div class="col-md-6">
                <table class="table table-borderless">
                    <tr>
                        <th width="40%">Manager Contact:</th>
                        <td>
                            @if (!string.IsNullOrEmpty(Model.ManagerNumber))
                            {
                                <i class="bi bi-telephone"></i> @Model.ManagerNumber
                            }
                            else
                            {
                                <span class="text-muted">Not provided</span>
                            }
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Financial & Technical Information Card -->
<div class="card mb-3">
    <div class="card-header bg-warning text-dark">
        <h5 class="mb-0"><i class="bi bi-calculator"></i> Financial & Technical Information</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <table class="table table-borderless">
                    <tr>
                        <th width="40%">Account ID:</th>
                        <td><strong>@Model.AccountId</strong></td>
                    </tr>
                    <tr>
                        <th>Cost Center ID:</th>
                        <td><strong>@Model.CostId</strong></td>
                    </tr>
                </table>
            </div>
            <div class="col-md-6">
                <table class="table table-borderless">
                    <tr>
                        <th width="40%">IVM Code:</th>
                        <td>
                            @if (!string.IsNullOrEmpty(Model.IVM))
                            {
                                <code>@Model.IVM</code>
                            }
                            else
                            {
                                <span class="text-muted">Not set</span>
                            }
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Additional Notes Card -->
@if (!string.IsNullOrEmpty(Model.AdditionalNote))
{
    <div class="card mb-3">
        <div class="card-header bg-secondary text-white">
            <h5 class="mb-0"><i class="bi bi-sticky"></i> Additional Notes</h5>
        </div>
        <div class="card-body">
            <p class="mb-0">@Model.AdditionalNote</p>
        </div>
    </div>
}

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 2px solid #dee2e6;
    }

    .page-header h2 {
        margin: 0;
        color: #2c3e50;
    }

    .table-borderless th {
        font-weight: 600;
        color: #495057;
    }
</style>
