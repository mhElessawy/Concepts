@model DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="page-header">
    <h2><i class="bi bi-speedometer2"></i> Dashboard</h2>
</div>

<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="stat-card stat-card-primary">
            <div style="position: relative; z-index: 1;">
                <h6 class="mb-2">Total Items</h6>
                <h2 class="mb-0">@Model.TotalItems</h2>
                <i class="bi bi-box" style="position: absolute; right: 20px; top: 20px; font-size: 3rem; opacity: 0.3;"></i>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="stat-card stat-card-success">
            <div style="position: relative; z-index: 1;">
                <h6 class="mb-2">Total Value</h6>
                <h2 class="mb-0">$@Model.TotalValue.ToString("N0")</h2>
                <i class="bi bi-cash-stack" style="position: absolute; right: 20px; top: 20px; font-size: 3rem; opacity: 0.3;"></i>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="stat-card stat-card-warning">
            <div style="position: relative; z-index: 1;">
                <h6 class="mb-2">Categories</h6>
                <h2 class="mb-0">@Model.TotalCategories</h2>
                <i class="bi bi-tags" style="position: absolute; right: 20px; top: 20px; font-size: 3rem; opacity: 0.3;"></i>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="stat-card stat-card-danger">
            <div style="position: relative; z-index: 1;">
                <h6 class="mb-2">Low Stock Items</h6>
                <h2 class="mb-0">@Model.LowStockItems</h2>
                <i class="bi bi-exclamation-triangle" style="position: absolute; right: 20px; top: 20px; font-size: 3rem; opacity: 0.3;"></i>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title mb-4">
                    <i class="bi bi-clock-history"></i> Recently Added Items
                </h5>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Item Code</th>
                                <th>Item Name</th>
                                <th>Category</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Date Added</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.RecentItems)
                            {
                                <tr>
                                    <td><span class="badge bg-primary">@item.ItemCode</span></td>
                                    <td>@item.ItemName</td>
                                    <td>@item.SubCategory?.Category?.Name</td>
                                    <td>
                                        @if (item.QuantityInStore < 10)
                                        {
                                            <span class="badge bg-danger">@item.QuantityInStore</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">@item.QuantityInStore</span>
                                        }
                                    </td>
                                    <td>$@item.PurchaseValue.ToString("N2")</td>
                                    <td>@item.CreatedDate.ToString("MM/dd/yyyy")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>