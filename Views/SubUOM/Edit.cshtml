@model DefSubUOM

@{
    ViewData["Title"] = "Edit Sub UOM";
}

<div class="page-header">
    <h2><i class="bi bi-pencil-square"></i> Edit Sub Unit: @Model.SubUOMName</h2>
</div>

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card">
            <div class="card-body p-4">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CreatedDate" />

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="SubUOMCode" class="form-label">Sub UOM Code <span class="text-danger">*</span></label>
                        <input asp-for="SubUOMCode" class="form-control" />
                        <span asp-validation-for="SubUOMCode" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="SubUOMName" class="form-label">Sub UOM Name <span class="text-danger">*</span></label>
                        <input asp-for="SubUOMName" class="form-control" />
                        <span asp-validation-for="SubUOMName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="UOMId" class="form-label">Parent UOM <span class="text-danger">*</span></label>
                        <select asp-for="UOMId" class="form-select">
                            <option value="">-- Select UOM --</option>
                            @foreach (var uom in ViewBag.UOMs as List<DefUOM>)
                            {
                                <option value="@uom.Id">@uom.UOMName (@uom.UOMCode)</option>
                            }
                        </select>
                        <span asp-validation-for="UOMId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input asp-for="Active" class="form-check-input" type="checkbox" />
                            <label asp-for="Active" class="form-check-label">Active</label>
                        </div>
                    </div>

                    <div class="mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Save Changes
                        </button>
                        <a href="/SubUOM" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}