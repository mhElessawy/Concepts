@model PurchaseOrderHeader

@{
    ViewData["Title"] = "Delete Purchase Order";
    var details = ViewBag.Details as List<PurchaseOrderDetails>;
}

<div class="page-header">
    <h2 class="text-danger"><i class="bi bi-exclamation-triangle"></i> Delete Purchase Order</h2>
</div>

<div class="card border-danger">
    <div class="card-body">
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle-fill"></i>
            <strong>Warning!</strong> Are you sure you want to delete this purchase order?
            This action cannot be undone.
        </div>

        <!-- Header Info -->
        <div class="row mb-4">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-5">Purchase Code:</dt>
                    <dd class="col-sm-7">
                        <span class="badge bg-primary">@Model.PurchaseCode</span>
                    </dd>

                    <dt class="col-sm-5">Purchase No:</dt>
                    <dd class="col-sm-7">@Model.PurchaseNo</dd>

                    <dt class="col-sm-5">Purchase Date:</dt>
                    <dd class="col-sm-7">@Model.PurchaseDate.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-5">Department:</dt>
                    <dd class="col-sm-7">@Model.Department?.DepartmentName</dd>
                </dl>
            </div>

            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-5">Ordered By:</dt>
                    <dd class="col-sm-7">@Model.User?.FullName</dd>

                    <dt class="col-sm-5">Vendor:</dt>
                    <dd class="col-sm-7">@Model.Vender?.VenderName</dd>

                    <dt class="col-sm-5">Status:</dt>
                    <dd class="col-sm-7">
                        @switch (Model.PurchaseStatus)
                        {
                            case 0:
                                <span class="badge bg-warning">Pending</span>
                                break;
                            case 1:
                                <span class="badge bg-info">Approved</span>
                                break;
                            case 2:
                                <span class="badge bg-danger">Rejected</span>
                                break;
                            case 3:
                                <span class="badge bg-success">Completed</span>
                                break;
                        }
                    </dd>

                    <dt class="col-sm-5">Total Items:</dt>
                    <dd class="col-sm-7">
                        <span class="badge bg-info">@details?.Count items</span>
                    </dd>
                </dl>
            </div>
        </div>

        <!-- Items Summary -->
        @if (details != null && details.Any())
        {
            <h6 class="mb-3"><i class="bi bi-list"></i> Items to be deleted:</h6>
            <div class="table-responsive mb-4">
                <table class="table table-sm table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Item</th>
                            <th>Price</th>
                            <th>Qty</th>
                            <th>Total</th>
                            <th>Discount</th>
                            <th>Net</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int counter = 1;
                        }
                        @foreach (var detail in details)
                        {
                            <tr>
                                <td>@counter</td>
                                <td>@detail.Item?.ItemName</td>
                                <td class="text-end">@detail.Price.ToString("N3")</td>
                                <td class="text-end">@detail.Quantity.ToString("N3")</td>
                                <td class="text-end">@detail.TotalPrice.ToString("N3")</td>
                                <td class="text-end text-danger">@detail.Discount.ToString("N3")</td>
                                <td class="text-end fw-bold">@detail.NetPrice.ToString("N3")</td>
                            </tr>
                            counter++;
                        }
                    </tbody>
                    <tfoot>
                        <tr class="table-info fw-bold">
                            <td colspan="6" class="text-end">Grand Total:</td>
                            <td class="text-end">@ViewBag.GrandTotal.ToString("N3")</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        }

        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Yes, Delete This Order
            </button>
            <a href="/PurchaseOrders" class="btn btn-secondary">
                <i class="bi bi-x-circle"></i> Cancel
            </a>
        </form>
    </div>
</div>
