@model IEnumerable<PurchaseOrderHeader>

@{
    ViewData["Title"] = "Pending Purchase Orders - Approval";
}

<div class="page-header">
    <h2><i class="bi bi-clipboard-check"></i> Pending Purchase Orders - Approval</h2>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="alert alert-info mb-3">
                <i class="bi bi-info-circle"></i>
                <strong>@Model.Count()</strong> purchase order(s) waiting for your approval.
            </div>

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Purchase Code</th>
                            <th>Purchase No</th>
                            <th>Date</th>
                            <th>Department</th>
                            <th>Requested By</th>
                            <th>Vendor</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong class="text-primary">@item.PurchaseCode</strong>
                                </td>
                                <td>@item.PurchaseNo</td>
                                <td>@item.PurchaseDate.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <span class="badge bg-info">@item.Department?.DepartmentName</span>
                                </td>
                                <td>@item.User?.FullName</td>
                                <td>@item.Vender?.VenderName</td>
                                <td>
                                    <span class="badge bg-warning">
                                        <i class="bi bi-hourglass-split"></i> Pending Approval
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="ApprovalDetails" asp-route-id="@item.Id"
                                           class="btn btn-primary" title="View & Approve">
                                            <i class="bi bi-eye"></i> Review
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-success text-center py-5">
                <i class="bi bi-check-circle fs-1 d-block mb-3"></i>
                <h5>No Pending Orders</h5>
                <p class="mb-0">All purchase orders have been reviewed.</p>
            </div>
        }
    </div>
</div>

<div class="mt-3">
    <a href="/PurchaseOrders" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to All Orders
    </a>
</div>
