@model UserInfo

@{
    ViewData["Title"] = "My Profile";
}

<div class="page-header">
    <h2><i class="bi bi-person-circle"></i> My Profile</h2>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-md-4">
        <!-- Profile Card -->
        <div class="card mb-4">
            <div class="card-body text-center">
                <div class="profile-avatar mb-3">
                    <i class="bi bi-person-circle" style="font-size: 8rem; color: var(--primary-color);"></i>
                </div>
                <h4 class="mb-1">@Model.FullName</h4>
                <p class="text-muted mb-3">@(Model.JobTitle?.JobName ?? "N/A")</p>

                @if (Model.Active)
                {
                    <span class="badge bg-success mb-3">
                        <i class="bi bi-check-circle"></i> Active
                    </span>
                }
                else
                {
                    <span class="badge bg-danger mb-3">
                        <i class="bi bi-x-circle"></i> Inactive
                    </span>
                }

                <div class="d-grid gap-2">
                    <a asp-action="ChangePassword" class="btn btn-primary">
                        <i class="bi bi-key"></i> Change Password
                    </a>
                    <a href="/" class="btn btn-secondary">
                        <i class="bi bi-house"></i> Back to Dashboard
                    </a>
                </div>
            </div>
        </div>

        <!-- Quick Stats Card -->
        <div class="card">
            <div class="card-body">
                <h6 class="card-title mb-3">
                    <i class="bi bi-info-circle"></i> Account Info
                </h6>
                <div class="mb-2">
                    <small class="text-muted">Member Since</small><br>
                    <strong>@Model.CreatedDate.ToString("MMMM dd, yyyy")</strong>
                </div>
                <div class="mb-2">
                    <small class="text-muted">Last Updated</small><br>
                    <strong>@Model.ModifiedDate.ToString("MMMM dd, yyyy")</strong>
                </div>
                @if (Model.PurchaseOrderAuthorise)
                {
                    <div class="alert alert-info mt-3 mb-0">
                        <small>
                            <i class="bi bi-shield-check"></i>
                            <strong>PO Authorization Enabled</strong>
                        </small>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <!-- Personal Information -->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">
                    <i class="bi bi-person"></i> Personal Information
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="text-muted small mb-1">User Code</label>
                        <div class="form-control-plaintext">
                            <span class="badge bg-primary">@Model.UserCode</span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="text-muted small mb-1">Username</label>
                        <div class="form-control-plaintext">
                            <strong>@Model.UserName</strong>
                        </div>
                    </div>
                    <div class="col-md-12 mb-3">
                        <label class="text-muted small mb-1">Full Name</label>
                        <div class="form-control-plaintext">
                            <strong>@Model.FullName</strong>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Job Information -->
        <div class="card mb-4">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">
                    <i class="bi bi-briefcase"></i> Job Information
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="text-muted small mb-1">Department</label>
                        <div class="form-control-plaintext">
                            @if (Model.Department != null)
                            {
                                <span class="badge bg-info">
                                    <i class="bi bi-diagram-3"></i> @Model.Department.DepartmentName
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">Not Assigned</span>
                            }
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="text-muted small mb-1">Job Title</label>
                        <div class="form-control-plaintext">
                            @if (Model.JobTitle != null)
                            {
                                <span class="badge bg-secondary">
                                    <i class="bi bi-briefcase"></i> @Model.JobTitle.JobName
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">Not Assigned</span>
                            }
                        </div>
                    </div>
                    <div class="col-md-12">
                        <label class="text-muted small mb-1">Permissions</label>
                        <div class="form-control-plaintext">
                            <div class="d-flex gap-2 flex-wrap">
                                @if (Model.PurchaseOrderAuthorise)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle"></i> Purchase Order Authorization
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-x-circle"></i> No PO Authorization
                                    </span>
                                }

                                @if (Model.Active)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle"></i> Active Account
                                    </span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Activity Timeline -->
        <div class="card">
            <div class="card-header bg-warning text-white">
                <h5 class="mb-0">
                    <i class="bi bi-clock-history"></i> Activity Timeline
                </h5>
            </div>
            <div class="card-body">
                <div class="timeline">
                    <div class="timeline-item mb-3">
                        <div class="d-flex">
                            <div class="timeline-icon bg-success text-white rounded-circle p-2 me-3">
                                <i class="bi bi-person-check"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="mb-1">Account Created</h6>
                                <p class="text-muted mb-0">
                                    <small>
                                        <i class="bi bi-calendar"></i>
                                        @Model.CreatedDate.ToString("MMMM dd, yyyy 'at' hh:mm tt")
                                    </small>
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="timeline-item mb-3">
                        <div class="d-flex">
                            <div class="timeline-icon bg-primary text-white rounded-circle p-2 me-3">
                                <i class="bi bi-pencil"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="mb-1">Last Profile Update</h6>
                                <p class="text-muted mb-0">
                                    <small>
                                        <i class="bi bi-calendar"></i>
                                        @Model.ModifiedDate.ToString("MMMM dd, yyyy 'at' hh:mm tt")
                                    </small>
                                </p>
                            </div>
                        </div>
                    </div>

                    @if (Context.Session.GetString("LastLogin") != null)
                    {
                        <div class="timeline-item">
                            <div class="d-flex">
                                <div class="timeline-icon bg-info text-white rounded-circle p-2 me-3">
                                    <i class="bi bi-box-arrow-in-right"></i>
                                </div>
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">Last Login</h6>
                                    <p class="text-muted mb-0">
                                        <small>
                                            <i class="bi bi-calendar"></i>
                                            @Context.Session.GetString("LastLogin")
                                        </small>
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .profile-avatar {
        animation: fadeInScale 0.5s ease-in-out;
    }

    @@keyframes fadeInScale {
        from {
            opacity: 0;
            transform: scale(0.8);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    .timeline-icon {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .timeline-item {
        position: relative;
        padding-bottom: 1rem;
    }

        .timeline-item:not(:last-child)::after {
            content: '';
            position: absolute;
            left: 19px;
            top: 45px;
            width: 2px;
            height: calc(100% - 20px);
            background: #e2e8f0;
        }

    .form-control-plaintext {
        padding: 0.5rem 0;
        font-size: 1rem;
    }

    .card-header {
        border-radius: 12px 12px 0 0 !important;
    }

    .card {
        animation: fadeInUp 0.5s ease-in-out;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
