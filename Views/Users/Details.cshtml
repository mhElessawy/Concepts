@model UserInfo

@{
    ViewData["Title"] = "User Details";
}

<div class="page-header">
    <h2><i class="bi bi-person-badge"></i> User Details</h2>
</div>

<div class="card mb-3">
    <div class="card-header bg-info text-white">
        <h5 class="mb-0"><i class="bi bi-info-circle"></i> User Information</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">User Code:</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-primary fs-6">@Model.UserCode</span>
                    </dd>

                    <dt class="col-sm-4">Full Name:</dt>
                    <dd class="col-sm-8"><strong>@Model.FullName</strong></dd>

                    <dt class="col-sm-4">Username:</dt>
                    <dd class="col-sm-8">@Model.UserName</dd>

                    <dt class="col-sm-4">Job Title:</dt>
                    <dd class="col-sm-8">
                        @if (Model.JobTitle != null)
                        {
                            <span class="badge bg-secondary">@Model.JobTitle.JobName</span>
                        }
                        else
                        {
                            <span class="text-muted">N/A</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Department:</dt>
                    <dd class="col-sm-8">
                        @if (Model.Department != null)
                        {
                            <span class="badge bg-info">@Model.Department.DepartmentName</span>
                        }
                        else
                        {
                            <span class="text-muted">N/A</span>
                        }
                    </dd>
                </dl>
            </div>

            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Status:</dt>
                    <dd class="col-sm-8">
                        @if (Model.Active)
                        {
                            <span class="badge bg-success">
                                <i class="bi bi-check-circle"></i> Active
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-danger">
                                <i class="bi bi-x-circle"></i> Inactive
                            </span>
                        }
                    </dd>

                    <dt class="col-sm-4">Created Date:</dt>
                    <dd class="col-sm-8">
                        <small>@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</small>
                    </dd>

                    <dt class="col-sm-4">Modified Date:</dt>
                    <dd class="col-sm-8">
                        <small>@Model.ModifiedDate.ToString("dd/MM/yyyy HH:mm")</small>
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<!-- Permissions Card -->
<div class="card mb-3">
    <div class="card-header bg-warning text-dark">
        <h5 class="mb-0"><i class="bi bi-shield-lock"></i> Permissions</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <!-- Purchase Order Authorise -->
            <div class="col-md-6 mb-3">
                <div class="alert @(Model.PurchaseOrderAuthorise ? "alert-primary" : "alert-secondary") mb-0">
                    <h6 class="alert-heading">
                        @if (Model.PurchaseOrderAuthorise)
                        {
                            <i class="bi bi-check-circle-fill text-primary"></i>
                        }
                        else
                        {
                            <i class="bi bi-x-circle text-secondary"></i>
                        }
                        Purchase Order Authorise
                    </h6>
                    <hr>
                    <p class="mb-0">
                        @if (Model.PurchaseOrderAuthorise)
                        {
                            <strong>✅ Enabled:</strong>
                            <span>User can authorize purchase orders.</span>
                        }
                        else
                        {
                            <strong>❌ Disabled:</strong>
                            <span>User cannot authorize purchase orders.</span>
                        }
                    </p>
                </div>
            </div>

            <!-- Can Approve Purchase Orders -->
            <div class="col-md-6 mb-3">
                <div class="alert @(Model.CanApprovePurchaseOrders ? "alert-warning" : "alert-secondary") mb-0">
                    <h6 class="alert-heading">
                        @if (Model.CanApprovePurchaseOrders)
                        {
                            <i class="bi bi-clipboard-check-fill text-warning"></i>
                        }
                        else
                        {
                            <i class="bi bi-x-circle text-secondary"></i>
                        }
                        Can Approve Purchase Orders
                    </h6>
                    <hr>
                    <p class="mb-0">
                        @if (Model.CanApprovePurchaseOrders)
                        {
                            <strong>✅ Enabled:</strong>
                            <span>User can approve or reject purchase orders from Pending Approval.</span>
                        }
                        else
                        {
                            <strong>❌ Disabled:</strong>
                            <span>User cannot approve purchase orders.</span>
                        }
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Action Buttons -->
<div class="mb-4">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg">
        <i class="bi bi-pencil"></i> Edit
    </a>
    <a asp-action="ChangePassword" asp-route-id="@Model.Id" class="btn btn-primary btn-lg">
        <i class="bi bi-key"></i> Change Password
    </a>
    <a asp-action="Index" class="btn btn-secondary btn-lg">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>
