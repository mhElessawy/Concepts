@model IEnumerable<UserInfo>

@{
    ViewData["Title"] = "Users Management";
}

<div class="page-header">
    <h2><i class="bi bi-people"></i> Users Management</h2>
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add New User
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>User Code</th>
                            <th>Full Name</th>
                            <th>Username</th>
                            <th>Job Title</th>
                            <th>Department</th>
                            <th>PO Authorise</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td><strong>@user.UserCode</strong></td>
                                <td>@user.FullName</td>
                                <td>@user.UserName</td>
                                <td>@(user.JobTitle?.JobName ?? "N/A")</td>
                                <td>@(user.Department?.DepartmentName ?? "N/A")</td>
                                <td>
                                    @if (user.PurchaseOrderAuthorise)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Yes
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-x-circle"></i> No
                                        </span>
                                    }
                                </td>
                                <td>
                                    @if (user.Active)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Details" asp-route-id="@user.Id" 
                                           class="btn btn-info" title="Details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@user.Id" 
                                           class="btn btn-warning" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="ChangePassword" asp-route-id="@user.Id" 
                                           class="btn btn-primary" title="Change Password">
                                            <i class="bi bi-key"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@user.Id" 
                                           class="btn btn-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info mt-4">
        <i class="bi bi-info-circle"></i> No users found. Click "Add New User" to create one.
    </div>
}
