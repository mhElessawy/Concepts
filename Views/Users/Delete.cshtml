@model UserInfo

@{
    ViewData["Title"] = "Delete User";
}

<div class="page-header">
    <h2 class="text-danger"><i class="bi bi-exclamation-triangle"></i> Delete User</h2>
</div>

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card border-danger">
            <div class="card-body p-4">
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    <strong>Warning!</strong> Are you sure you want to delete this user? This action cannot be undone.
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <h6 class="text-muted mb-3">Basic Information</h6>
                        
                        <dl class="row">
                            <dt class="col-sm-5">User Code:</dt>
                            <dd class="col-sm-7">
                                <span class="badge bg-primary">@Model.UserCode</span>
                            </dd>

                            <dt class="col-sm-5">Full Name:</dt>
                            <dd class="col-sm-7">@Model.FullName</dd>

                            <dt class="col-sm-5">Username:</dt>
                            <dd class="col-sm-7">
                                <strong>@Model.UserName</strong>
                            </dd>

                            <dt class="col-sm-5">Status:</dt>
                            <dd class="col-sm-7">
                                @if (Model.Active)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </dd>
                        </dl>
                    </div>

                    <div class="col-md-6">
                        <h6 class="text-muted mb-3">Job Information</h6>
                        
                        <dl class="row">
                            <dt class="col-sm-5">Department:</dt>
                            <dd class="col-sm-7">
                                @(Model.Department?.DepartmentName ?? "N/A")
                            </dd>

                            <dt class="col-sm-5">Job Title:</dt>
                            <dd class="col-sm-7">
                                @(Model.JobTitle?.JobName ?? "N/A")
                            </dd>

                            <dt class="col-sm-5">PO Authorise:</dt>
                            <dd class="col-sm-7">
                                @if (Model.PurchaseOrderAuthorise)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle"></i> Yes
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">
                                        <i class="bi bi-x-circle"></i> No
                                    </span>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>

                <form asp-action="Delete" method="post" class="mt-4">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Yes, Delete User
                    </button>
                    <a href="/Users" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>
